{
    "name": "syde/multisite-improvements",
    "description": "Proof of concept for a Canonical Plugin with improvements for WordPress Multisite",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Syde",
            "email": "hello@syde.com",
            "homepage": "https://syde.com",
            "role": "Company"
        }
    ],
    "autoload": {
        "psr-4": {
            "Syde\\MultisiteImprovements\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Syde\\MultisiteImprovementsUnitTests\\": "tests/php/unit/",
            "Syde\\MultisiteImprovementsIntegrationTests\\": "tests/php/integration/"
        }
    },
    "minimum-stability": "stable",
    "platform": {
        "php": ">=7.4"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "szepeviktor/phpstan-wordpress": "dev-master",
        "phpstan/extension-installer": "1.4.x-dev",
        "brain/monkey": "^2.0@dev",
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "scripts": {
        "tests:unit:php": "vendor/bin/phpunit",
        "tests:unit": ["@tests:unit:php"],
        "tests:integration:php": "npm run-script wp-env -- run tests-cli --env-cwd=wp-content/plugins/multisite-improvements ./vendor/bin/phpunit -c phpunit-integration-tests.xml.dist",
        "tests:integration": ["@tests:integration:php"],
        "lint:php": "vendor/bin/phpcs .",
        "lint": ["@lint:php"],
        "fix:php": "vendor/bin/phpcbf .",
        "fix": ["@fix:php"],
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=1G",
        "qa": [
            "@lint",
            "@phpstan"
        ],
        "i18n:pot": "wp i18n make-pot . languages/multisite-improvements.pot",
        "git-release": "bin/git-release.sh",
        "build": [
            "@composer install --no-dev",
            "@git-release"
        ]
    }
}
